<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Comcalc", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                Username: <%= link_to current_user.name, current_user %><br>
                <%= link_to Flat.find_by(id: current_user.flat_id).name, flat_path(current_user.flat_id) if current_user.flat_id%>
                <li class="divider"></li>
                <li>
                  <%= link_to('Edit Profile', edit_user_registration_path) %>
                  <%= link_to('Invite to Flat', new_invite_path) if current_user.flat_id  %>
                  <%= link_to('Create new Flat', new_flat_path) unless current_user.flat_id %>
                  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
                </li>
              </ul>
            </li>
            <li>
              <%= link_to('Dashboard', graphs_path)if current_user.flat_id %>
            </li>
            <li>
              <%= link_to('Create new bill', new_bill_path )if current_user.flat_id %>
            </li>
            <li>
              <%= link_to('List all bills', bills_path)if current_user.flat_id %>
            </li>
           <li>
              <%= link_to('Todos', todos_path) if current_user.flat_id %>
            </li>

        <% else %>
            <li>
              <%= link_to('Register', new_user_registration_path)  %>
              <%= link_to('Login', new_user_session_path, class: 'btn btn-success')  %>
              <!--<i class="glyphicon glyphicon-plus"></i> New Todo-->
            </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>